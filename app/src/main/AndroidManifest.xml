<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamgarbo.github.io.eyeoftyche">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".PlayerMenuActivity" />
        <activity android:name="com.google.android.gms.samples.vision.barcodereader.BarcodeCaptureActivity" />
        <activity android:name=".CreatePlayerActivity"></activity>
        <activity android:name=".PlayerInventoryActivity" />
        <activity android:name=".PlayerSpellBookActivity" />
        <activity android:name=".PlayerStatsActivity"></activity>
    </application>

</manifest>